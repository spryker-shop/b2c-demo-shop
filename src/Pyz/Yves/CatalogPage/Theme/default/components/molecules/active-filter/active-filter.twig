{% extends model('component') %}

{% define config = {
    name: 'active-filter',
    tag: 'a'
} %}

{% define data = {
    filter: required,
    value: null
} %}

{% define attributes = {
    href: (data.value is not empty) ? generateUrlWithoutActiveSearchFilter(data.filter, data.value) : null
} %}

{% block component %}
    {% if data.value is not empty %}
        {{parent()}}
    {% endif %}
{% endblock %}

{% block class %}
    {{parent()}}
    {{ config.name }}__item
{% endblock %}

{% block body %}
    {{data.value}}
    {% include atom('icon') with {
        modifiers: ['medium'],
        class: config.name ~ '__icon-close',
        data: {
            name: 'close-filter'
        }
    } only %}
{% endblock %}
