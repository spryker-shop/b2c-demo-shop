{% extends template('page-layout-main') %}

{% define data = {
    breadcrumbs: _view.stepBreadcrumbs.breadcrumbs | default([])
} %}

{% block sidebar %}{% endblock %}

{% block header %}
    {% include organism('header') with {
        data: {
            showSearchForm: false,
            showNavigation: false
        }
    } only %}
{% endblock %}

{% block container %}
    <div class="container">
        <div class="container__inner">
            {% block pageInfo %}
                {% block breadcrumbs %}
                    {% include view('cart-checkout-breadcrumb', 'CheckoutWidget') with {
                        data: {
                            isCartPage: false,
                            checkoutBreadcrumbs: data.breadcrumbs
                        }
                    } only %}
                {% endblock %}

                {% block title %}
                    <h1 class="main-title">{{data.title}}</h1>
                {% endblock %}
            {% endblock %}

            <main>
                {% block content %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}
    


{% block footer %}
    {% embed organism('footer') only %}
        {% block footerTop %}{% endblock %}
    {% endembed %}
{% endblock %}
