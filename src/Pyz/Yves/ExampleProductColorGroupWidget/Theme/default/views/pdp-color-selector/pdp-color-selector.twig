{% extends template('widget') %}

{% define data = {
    idProductAbstract: _widget.idProductAbstract | default,
    items: _widget.productGroupItems | default([])
} %}

{% block body %}

    {% if data.items is not empty %}

        <div class="pdp-option">
            <div class="pdp-option__title">{{ 'product.attribute.color' | trans }}</div>
            <div class="pdp-option__wrapper">
                {% include molecule('color-selector', 'ExampleProductColorGroupWidget') with {
                    data: {
                        items: data.items
                    },
                    attributes: {
                        'target-image-selector': '.js-pdp-color-group__image-' ~ data.idProductAbstract ~ ' > img'
                    }
                } only %}
            </div>
        </div>

    {% endif %}

{% endblock %}
