{% extends model('component') %}

{% define config = {
    name: 'variant-resetter',
    tag: 'variant-resetter',
} %}

{% define data = {
    formName: null,
    selectedValue: null,
} %}

{% define attributes = {
    'ajax-mode': null,
} %}

{% block body %}
    {% if data.formName is not null and data.selectedValue is not null %}
        {% block selectedValue %}
            {{ data.selectedValue }}

            <button type="button" class="spacing-left {{ config.name }}__button {{ config.jsName }}__trigger">
                {%- include atom('icon') with {
                    modifiers: ['secondary'],
                    data: {
                        name: 'close',
                    },
                } only -%}
            </button>
        {% endblock %}

        <input type="hidden" class="{{ config.jsName }}__target" name="{{ data.formName }}" value="{{ data.selectedValue }}">
    {% endif %}
{% endblock %}
