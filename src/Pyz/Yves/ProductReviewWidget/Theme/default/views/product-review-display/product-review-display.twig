{% extends view('product-review-display', '@SprykerShop:ProductReviewWidget') %}

{% define data = {
    parentJsName: '',
    reviewCount: 0,
} %}

{% block body %}
    {% include molecule('rating-selector', 'ProductReviewWidget') with {
        modifiers: ['small'],
        data: {
            value: data.value,
            maxValue: data.maxValue,
            useHalfSteps: true,
            parentJsName: data.parentJsName,
            reviewCount: data.reviewCount,
        },
        attributes: {
            readonly: true,
        },
    } only %}
{% endblock %}
