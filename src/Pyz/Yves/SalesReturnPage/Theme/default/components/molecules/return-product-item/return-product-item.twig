{% extends molecule('return-product-item', '@SprykerShop:SalesReturnPage') %}

{% block body %}
    {% set checkboxColumnClass = 'col col--middle' %}
    {% set productItemColumnClass = config.name ~ '__content grid col' %}

    {{ parent() }}
{% endblock %}

{% block productItemColumnInner %}
    {% set productInfoColumnClass = config.name ~ '__info col col--sm-12 col--xl-4' %}
    {% set productStatusColumnClass = config.name ~ '__status col col--sm-12 col--xl-2' %}
    {% set productPriceColumnClass = config.name ~ '__price col col--sm-4 col--xl-2' %}
    {% set productQuantityColumnClass = config.name ~ '__quantity col col--sm-4 col--xl-2' %}
    {% set productPriceTotalColumnClass = config.name ~ '__total-price col col--sm-4 col--xl-2' %}

    {{ parent() }}
{% endblock %}

{% block checkboxColumnInner %}
    {% include molecule('product-image') with {
        modifiers: ['no-side-indent'],
        class: config.name ~ '__image',
        data: {
            name: data.item.name,
            image: data.item.metadata.image,
        },
    } only %}
{% endblock %}

{% block productItemInfoInner %}
    {% set productOptionWrapperClass = '' %}
    {% set skuClass = config.name ~ '__sku' %}

    {{ parent() }}
{% endblock %}

{% block productItemName %}
    <div class="{{ config.name }}__name">
        {{ data.item.name }}
    </div>
{% endblock %}

{% block productItemQuantity %}
    {{ 'global.quantity_symbol' | trans }} {{ data.item.quantity }}
{% endblock %}

{% block productOptions %}{% endblock %}
