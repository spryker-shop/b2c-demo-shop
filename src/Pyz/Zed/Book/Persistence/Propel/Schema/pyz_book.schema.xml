<?xml version="1.0" encoding="UTF-8"?>
<database name="zed"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\Book\Persistence"
          package="src.Orm.Zed.Book.Persistence">

    <table name="pyz_book" idMethod="native">
        <column name="id" required="true" type="INTEGER" autoIncrement="true" primaryKey="true" />
        <column name="name" required="true" type="VARCHAR" size="255" />
        <column name="description" type="LONGVARCHAR" />
        <column name="publication_date" type="TIMESTAMP" />
    </table>
</database>
